<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:text="Employee Registration"
            android:textSize="@dimen/text_16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:background="@drawable/rounded_corner_layout"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10dp">

            <ImageView
                android:id="@+id/ProfileImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="choseImage"
                android:layout_gravity="center"
                android:src="@drawable/profile_icon"></ImageView>
        </LinearLayout>

        <!--background_information layout field start -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:text="@string/background_information"
            android:textSize="@dimen/text_14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:background="@drawable/rounded_corner_layout"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10dp">


            <!--First Name and Last Name  field layout start-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/f_name"
                    android:textColor="@color/orange_color"
                    android:textSize="@dimen/text_12sp" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:text="@string/l_name"
                    android:textColor="@color/orange_color"
                    android:textSize="@dimen/text_12sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_f_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_rectangle_solid_gray"
                    android:hint="@string/f_name"
                    android:inputType="textPersonName"
                    android:nextFocusDown="@+id/et_l_name"
                    android:padding="@dimen/dimen_8dp"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/dimen_12dp" />

                <EditText
                    android:id="@+id/et_l_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_rectangle_solid_gray"
                    android:hint="@string/l_name"
                    android:inputType="textPersonName"
                    android:nextFocusDown="@+id/et_phone_number"
                    android:padding="@dimen/dimen_8dp"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/text_12sp" />

            </LinearLayout>


            <!--First Name and Last Name  field layout End-->


            <!--PhoneNumber layout field start-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/phone_number"
                android:textColor="@color/orange_color"
                android:textSize="@dimen/text_12sp" />

            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@drawable/rounded_corner_rectangle_solid_gray"
                android:gravity="center_vertical"
                android:hint="Ex. 9009012345"
                android:inputType="phone"
                android:nextFocusDown="@+id/et_email"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_8dp"
                android:textColor="@color/gray_color"
                android:textSize="@dimen/dimen_12dp" />


            <!--PhoneNumber layout field End-->


            <!--Email layout field start-->
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/email"
                android:textColor="@color/orange_color"
                android:textSize="@dimen/text_12sp" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@drawable/rounded_corner_rectangle_solid_gray"
                android:gravity="center_vertical"
                android:hint="email@xyz.com"
                android:inputType="textEmailAddress"
                android:nextFocusDown="@+id/et_password"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_8dp"
                android:textColor="@color/gray_color"
                android:textSize="@dimen/dimen_12dp">

            </EditText>


            <!--Email layout field End-->

            <!--password layout field Start-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Address"
                    android:textColor="@color/orange_color"
                    android:textSize="@dimen/text_12sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_rectangle_solid_gray"
                    android:hint="Address"
                    android:inputType="textEmailAddress"
                    android:nextFocusDown="@+id/et_cnfm_pswd"
                    android:padding="@dimen/dimen_8dp"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/text_12sp" />


            </LinearLayout>


            <!--Country of origion layout field Start-->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="Paytm Numbrer"
                android:textColor="@color/orange_color"
                android:textSize="@dimen/text_12sp" />

            <EditText
                android:id="@+id/et_paytm_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@drawable/rounded_corner_rectangle_solid_gray"
                android:drawablePadding="@dimen/dimen_5dp"
                android:gravity="center_vertical"
                android:hint="Paytm Number"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_8dp"
                android:inputType="number"
                android:textColor="@color/gray_color"
                android:textSize="@dimen/dimen_12dp">

            </EditText>


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:text="UPI Number"
                android:textColor="@color/orange_color"
                android:textSize="@dimen/text_12sp" />

            <EditText
                android:id="@+id/et_tez_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@drawable/rounded_corner_rectangle_solid_gray"
                android:gravity="center_vertical"
                android:hint="UPI Number"
                android:inputType="number"
                android:nextFocusDown="@+id/et_account_number"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_8dp"
                android:textColor="@color/gray_color"
                android:textSize="@dimen/dimen_12dp" />


            <!--Post Code  layout field End-->


            <!--Account Number   layout field Start-->

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/account_number"
                android:textColor="@color/orange_color"
                android:textSize="@dimen/text_12sp" />

            <EditText
                android:id="@+id/et_account_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@drawable/rounded_corner_rectangle_solid_gray"
                android:gravity="center_vertical"
                android:hint="Ex. 425123456789"
                android:inputType="number"
                android:nextFocusDown="@+id/et_short_code"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_8dp"
                android:textColor="@color/gray_color"
                android:textSize="@dimen/dimen_12dp" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="IFSC CODE"
                android:textColor="@color/orange_color"
                android:textSize="@dimen/text_12sp" />

            <EditText
                android:id="@+id/IFSCCODE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@drawable/rounded_corner_rectangle_solid_gray"
                android:gravity="center_vertical"
                android:hint="IFSC CODE"
                android:inputType="textEmailAddress"
                android:nextFocusDown="@+id/et_short_code"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_8dp"
                android:textColor="@color/gray_color"
                android:textSize="@dimen/dimen_12dp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="Bank Name"
                android:textColor="@color/orange_color"
                android:textSize="@dimen/text_12sp" />

            <EditText
                android:id="@+id/et_bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@drawable/rounded_corner_rectangle_solid_gray"
                android:gravity="center_vertical"
                android:hint="Bank Name"
                android:inputType="text"
                android:nextFocusDown="@+id/et_short_code"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_8dp"
                android:textColor="@color/gray_color"
                android:textSize="@dimen/dimen_12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:background="@drawable/rounded_corner_layout"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="Aadhar Card Number"
                android:textColor="@color/orange_color"
                android:textSize="@dimen/text_12sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/et_aadhar_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@drawable/rounded_corner_rectangle_solid_gray"
                android:drawablePadding="@dimen/dimen_5dp"
                android:hint="Enter Adhar card number"
                android:orientation="horizontal"
                android:inputType="number"
                android:padding="@dimen/dimen_8dp"
                android:textColor="@color/gray_color"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/aadharAttach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="Attachment Photo"
                android:gravity="right"
                android:textColor="@color/orange_color"
                android:textSize="@dimen/text_12sp"
                android:visibility="visible" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_registerEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_rectangle_black_2"
            android:gravity="center"
            android:padding="@dimen/dimen_10dp"
            android:hint="@string/register"
            android:textAlignment="center"
            android:textColorHint="#FFF"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>
</ScrollView>
