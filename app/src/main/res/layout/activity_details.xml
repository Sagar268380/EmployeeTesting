<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="@dimen/dimen_8dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="8dp">

        <LinearLayout
            android:id="@+id/lin_firstId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg"
                android:orientation="vertical"
                android:padding="15dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_30sp"
                        android:layout_height="wrap_content"
                        android:text="JOB TITLE " />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_compId"
                        android:textColor="#000"
                        android:textStyle="normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HOTEL NAME:  " />

                    <TextView
                        android:id="@+id/tv_compId2"
                        android:textColor="#000"
                        android:textStyle="normal"
                        android:layout_toRightOf="@+id/tv_compId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  HOTEL NAME:" />

                </RelativeLayout>




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:textColor="#000"
                        android:textStyle="normal"
                        android:id="@+id/tv_startDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="START TIME       " />


                    <TextView
                        android:textColor="#000"
                        android:textStyle="normal"
                        android:id="@+id/tv_totalTimeId"
                        android:layout_toRightOf="@+id/tv_startDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="START TIME" />

                    <TextView
                        android:textColor="#000"
                        android:textStyle="normal"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:id="@+id/tv_endDate"
                        android:layout_below="@+id/tv_startDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="END TIME            " />


                    <TextView
                        android:textColor="#000"
                        android:textStyle="normal"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:id="@+id/tv_startTimeId"
                        android:layout_toRightOf="@+id/tv_endDate"
                        android:layout_below="@+id/tv_totalTimeId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="END TIME   " />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:textColor="#000"
                        android:textStyle="normal"
                        android:id="@+id/xyx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AMOUNT        " />


                    <TextView
                        android:textColor="#000"
                        android:textStyle="normal"
                        android:id="@+id/tv_amount"
                        android:layout_toRightOf="@+id/xyx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AMOUNT    " />

                    <TextView
                        android:id="@+id/tv_dat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/xyx"
                      android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_below="@+id/xyx"
                        android:text="9-DEC"
                        android:textColor="#000"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_below="@+id/tv_amount"
                        android:text="Date "
                        android:textColor="#000"
                        android:textStyle="normal" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:background="#D7D7D7"></View>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DESCRIPTION"
                        android:textSize="20sp"
                        android:ems="10"
                        android:id="@+id/dddd"
                        android:textStyle="bold"
                        android:textColor="#000"></TextView>

                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="description"
                        android:textStyle="normal"
                        android:ems="5"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:textColor="#000"
                        android:layout_below="@+id/dddd"
                        ></TextView>

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:background="#D7D7D7"></View>


                <!--<RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SPECIAL INSTRUCTION"
                        android:textSize="20sp"
                        android:id="@+id/sss"
                        android:textStyle="bold"
                        android:textColor="#000"></TextView>

                    <TextView
                        android:id="@+id/tv_special_instruction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="special"
                        android:textStyle="normal"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:textColor="#000"
                        android:layout_below="@+id/sss"
                        ></TextView>

                </RelativeLayout>-->
                    <Button
                        android:id="@+id/btnApply"
                        android:textStyle="normal"
                        android:textColor="#000"
                        android:layout_marginTop="@dimen/dimen_35dp"
                        android:layout_below="@+id/tv_special_instruction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/bg_for_button"
                        android:text="APPLY HERE"/>





            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView >


</RelativeLayout>