<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="@dimen/dimen_8dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="14dp">

        <LinearLayout
            android:id="@+id/lin_firstId"
            android:layout_width="match_parent"
            android:background="@drawable/box4"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_26sp"
                        android:layout_height="wrap_content"
                        android:text="JOB TITLE " />

                    <!--<TextView
                        android:textColor="#FFF"
                        android:textStyle="normal"
                        android:id="@+id/tv_amount1"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@+id/tv_title"
                        android:layout_marginLeft="@dimen/dimen_120dp"
                        android:layout_height="wrap_content"
                        android:text="AMOUNT  " />-->

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                 >

                    <TextView
                        android:id="@+id/tv_compId2"
                        android:textColor="#FFF"
                        android:textStyle="normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HOTEL NAME:" />

                    <TextView
                        android:textColor="#FFF"
                        android:textStyle="normal"
                        android:id="@+id/tv_amount"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@+id/tv_compId2"
                        android:layout_marginLeft="160dp"
                        android:layout_height="wrap_content"
                        android:text="AMOUNT  " />



                </RelativeLayout>




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   >

                    <TextView
                        android:textColor="#FFF"
                        android:textStyle="normal"
                        android:id="@+id/tv_totalTimeId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="START TIME   " />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_startTimeId"
                        android:layout_toRightOf="@+id/tv_totalTimeId"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:text="  END TIME"
                        android:textColor="#FFF"
                        android:textStyle="normal" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   >

                   <!-- <TextView
                        android:textColor="#FFF"
                        android:textStyle="normal"
                        android:id="@+id/tv_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AMOUNT  " />-->

                   <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="9-DEC"
                        android:textColor="#FFF"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/btnApply"
                        android:textStyle="normal"
                        android:textColor="#FFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="30dp"
                        android:text="APPLY HERE"/>
                </RelativeLayout>

               <!-- <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#D7D7D7"></View>-->


