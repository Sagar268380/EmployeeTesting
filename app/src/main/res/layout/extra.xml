<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_150dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:layout_margin="8dp"
            android:alpha="0.7"
            android:background="@drawable/job_img"
            android:text="Find Job"
            android:textAlignment="center"
            tools:ignore="RtlCompat"
            android:textSize="11sp"
            android:gravity="bottom"
            android:tooltipText="Job" />

        <Button
            android:layout_margin="8dp"
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:alpha="0.7"
            android:text="Urgent Job"
            android:textAlignment="center"
            android:textSize="11sp"
            tools:ignore="RtlCompat"
            android:gravity="bottom"
            android:tooltipText="Urgent Job"
            android:background="@drawable/urgentjob_img"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:layout_margin="8dp"
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:alpha="0.7"
            android:textSize="11sp"
            android:tooltipText="Seat"
            android:text="seat available"
            android:textAlignment="center"
            tools:ignore="RtlCompat"
            android:gravity="bottom"
            android:background="@drawable/sea"/>

        <Button
            android:layout_margin="8dp"
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:alpha="0.7"
            android:text="Profile"
            android:textSize="11sp"
            android:textAlignment="center"
            tools:ignore="RtlCompat"
            android:gravity="bottom"
            android:tooltipText="Profile"
            android:background="@drawable/profile"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/show_dialog"
            android:text="show dialog"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_text"

            android:textColor="#000"
            android:textSize="24sp"/>


    </LinearLayout>

    android:id="@+id/btnAvailable"
    android:id="@+id/btnUnavAilable"
    android:id="@+id/txtAvaJobs"
    android:id="@+id/txtUrgentJobs"
    android:id="@+id/txt_35"
    android:id="@+id/txt_10"
    android:id="@+id/txt_25"
    android:id="@+id/txt_5"


    <androidx.appcompat.widget.Toolbar

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent">
    </androidx.appcompat.widget.Toolbar>


</LinearLayout>
